<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#46EFDF"
    tools:context=".MainActivity"
    tools:ignore="MissingDefaultResource">

    <LinearLayout
        android:id="@+id/layoutForTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="40dp"
        android:layout_marginTop="0dp"
        android:background="#535357"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/screenTextView"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_margin="1dp"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:layout_marginBottom="30dp"
            android:background="#222227"
            android:padding="10dp"
            android:text="@string/text"
            android:textAlignment="viewEnd"
            android:textColor="#FFFFFF"
            android:textSize="30dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/layoutForTextView"
        android:layout_marginHorizontal="40dp"
        android:layout_marginBottom="0dp"
        android:background="#535357"
        android:orientation="horizontal">


        <LinearLayout
            android:id="@+id/layout2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="1dp"
            android:layout_weight="1"
            android:background="#535357"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/second_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#535357"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/but7"
                    android:layout_width="60dp"
                    android:layout_height="55dp"
                    android:layout_marginLeft="1dp"
                    android:layout_marginBottom="1dp"
                    android:layout_weight="1"
                    android:background="#CCC9C9"
                    android:gravity="center"
                    android:onClick="onNumberClick"
                    android:text="@string/_7"
                    android:textAlignment="center"
                    android:textSize="30sp" />

                <Button
                    android:id="@+id/but8"
                    android:layout_width="60dp"
                    android:layout_height="55dp"
                    android:layout_marginLeft="1dp"
                    android:layout_marginBottom="1dp"
                    android:layout_weight="1"
                    android:background="#CCC9C9"
                    android:gravity="center"
                    android:onClick="onNumberClick"
                    android:text="@string/_8"
                    android:textAlignment="center"
                    android:textSize="30sp" />

                <Button
                    android:id="@+id/but9"
                    android:layout_width="60dp"
                    android:layout_height="55dp"
                    android:layout_marginLeft="1dp"
                    android:layout_marginBottom="1dp"
                    android:layout_weight="1"
                    android:background="#CCC9C9"
                    android:gravity="center"
                    android:onClick="onNumberClick"
                    android:text="@string/_9"
                    android:textAlignment="center"
                    android:textSize="30sp" />

                <Button
                    android:id="@+id/multiply"
                    android:layout_width="60dp"
                    android:layout_height="55dp"
                    android:layout_marginLeft="1dp"
                    android:layout_marginRight="1dp"
                    android:layout_marginBottom="1dp"
                    android:layout_weight="1"
                    android:background="#F8BB2E"
                    android:gravity="center"
                    android:text="@string/x"
                    android:textAlignment="center"
                    android:textColor="#FFFFFF"
                    android:textSize="30sp" />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/third_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#535357"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/but4"
                    android:layout_width="60dp"
                    android:layout_height="55dp"
                    android:layout_marginLeft="1dp"
                    android:layout_marginBottom="1dp"
                    android:layout_weight="1"
                    android:background="#CCC9C9"
                    android:gravity="center"
                    android:onClick="onNumberClick"
                    android:text="@string/_4"
                    android:textAlignment="center"
                    android:textSize="30sp" />

                <Button
                    android:id="@+id/but5"
                    android:layout_width="60dp"
                    android:layout_height="55dp"
                    android:layout_marginLeft="1dp"
                    android:layout_marginBottom="1dp"
                    android:layout_weight="1"
                    android:background="#CCC9C9"
                    android:gravity="center"
                    android:onClick="onNumberClick"
                    android:text="@string/_5"
                    android:textAlignment="center"
                    android:textSize="30sp" />

                <Button
                    android:id="@+id/but6"
                    android:layout_width="60dp"
                    android:layout_height="55dp"
                    android:layout_marginLeft="1dp"
                    android:layout_marginBottom="1dp"
                    android:layout_weight="1"
                    android:background="#CCC9C9"
                    android:gravity="center"
                    android:onClick="onNumberClick"
                    android:text="@string/_6"
                    android:textAlignment="center"
                    android:textSize="30sp" />

                <Button
                    android:id="@+id/minus"
                    android:layout_width="60dp"
                    android:layout_height="55dp"
                    android:layout_marginLeft="1dp"
                    android:layout_marginRight="1dp"
                    android:layout_marginBottom="1dp"
                    android:layout_weight="1"
                    android:background="#F8BB2E"
                    android:gravity="center"
                    android:text="@string/minus"
                    android:textAlignment="center"
                    android:textColor="#FFFFFF"
                    android:textSize="30sp" />

            </LinearLayout>

            <LinearLayout
