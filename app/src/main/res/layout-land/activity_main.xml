                    android:gravity="center"
                    android:text="@string/divide"
                    android:textAlignment="center"
                    android:textColor="#FFFFFF"
                    android:textSize="30sp" />


            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="1dp"
            android:layout_weight="1"
            android:background="#535357"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/first_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#535357"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/but_eng"
                    android:layout_width="60dp"
                    android:layout_height="55dp"
                    android:layout_marginBottom="1dp"
                    android:layout_weight="1"
                    android:background="#A0EA4A"
                    android:gravity="center"
                    android:text="@string/changeSign"
                    android:textAlignment="center"
                    android:textSize="30sp" />

                <Button
                    android:id="@+id/sign"
                    android:layout_width="60dp"
                    android:layout_height="55dp"
                    android:layout_marginLeft="1dp"
                    android:layout_marginBottom="1dp"
                    android:layout_weight="1"
                    android:background="#69B9F8"
                    android:gravity="center"
                    android:text="@string/c"
                    android:textAlignment="center"
                    android:textSize="30sp" />

                <Button
                    android:id="@+id/percent"
                    android:layout_width="60dp"
                    android:layout_height="55dp"
                    android:layout_marginLeft="1dp"
                    android:layout_marginBottom="1dp"
                    android:layout_weight="1"
                    android:background="#945EF4"
                    android:gravity="center"
                    android:text="@string/percent"
                    android:textAlignment="center"
                    android:textSize="30sp" />

                <Button
                    android:id="@+id/total"
                    android:layout_width="60dp"
                    android:layout_height="55dp"
                    android:layout_marginLeft="1dp"
                    android:layout_marginRight="1dp"
                    android:layout_marginBottom="1dp"
                    android:layout_weight="1"
                    android:background="#F86295"
                    android:gravity="center"
                    android:text="@string/total"
                    android:textAlignment="center"
                    android:textColor="#FFFFFF"
                    android:textSize="30sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/eng_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#535357"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/but_eng1"
                    android:layout_width="60dp"
                    android:layout_height="55dp"
                    android:layout_marginBottom="1dp"
                    android:layout_weight="1"
                    android:background="#F8E21F"
                    android:gravity="center"
                    android:text="@string/ms"
                    android:textAlignment="center"
                    android:textSize="30sp" />

                <Button
                    android:id="@+id/but_eng2"
                    android:layout_width="60dp"
                    android:layout_height="55dp"
                    android:layout_marginLeft="1dp"
                    android:layout_marginBottom="1dp"
                    android:layout_weight="1"
                    android:background="#F8E21F"
                    android:gravity="center"
                    android:text="@string/mr"
                    android:textAlignment="center"
                    android:textSize="30sp" />

                <Button
                    android:id="@+id/but_eng3"
                    android:layout_width="60dp"
                    android:layout_height="55dp"
                    android:layout_marginLeft="1dp"
                    android:layout_marginBottom="1dp"
                    android:layout_weight="1"
                    android:background="#F8E21F"
                    android:gravity="center"
